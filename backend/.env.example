# WebShepherd Environment Configuration
# Copy this file to .env and customize for your deployment

# Application
APP_NAME=WebShepherd
APP_VERSION=1.0.0
DEBUG=False

# Database
# SQLite (development)
DATABASE_URL=sqlite+aiosqlite:///./webshepherd.db
# PostgreSQL (production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost/webshepherd

# CORS - Allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://yorik.space

# Rate Limiting
RATE_LIMIT_PER_HOUR=10

# Scanning Limits
MAX_HTML_SIZE_MB=5
REQUEST_TIMEOUT=10
MAX_REDIRECTS=5

# User Agent
USER_AGENT=WebShepherd/1.0 (WCAG Accessibility Checker; +https://yorik.space/webshepherd)
